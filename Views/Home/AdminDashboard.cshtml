<body>
    <div class="container">
        <div class="dashboard-container">
            <h3>Submitted Claims</h3>
         
                    {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Lecturer</th>
                        <th>Date</th>
                        <th>Total Claim</th>
                        <th>Hours Worked</th>
                        <th>Supporting Document</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                   
                    @foreach (var claims in Model)
                    {
                       <tr>
                           <td>@claims.ClaimsId</td>
                           <td>@claims.hoursWorked</td>
                           <td>@claims.TotalAmount</td>
                                <td><a href="/uploads/@claims.supportingDocument "target="_blank">View Document</a></td>
                           <td>@claims.Status</td>
                           <td>
                               <form method="post" action="/Admin/ApprovedClaim">
                                   <input type ="hidden" name="claimId" value="@claims.ClaimsId"/>
                                   <button type = "submit" class=" btn btn-success"> Approve</button>
                               </form>
                                <form method="post" action="/Admin/RejectClaim">
                                    <input type="hidden" name="claimId" value="@claims.ClaimsId" />
                                    <button type="submit" class=" btn btn-danger"> Deny</button>
                                </form>
                           </td>
                       </tr> 
                    }
                </tbody>
            </table>
                    
        </div>
    </div>
